<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pokemon Go Spoofer"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#4CAF50"
        android:layout_marginBottom="4dp" />
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unlimited Trades & Legendaries"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#9C27B0"
        android:layout_marginBottom="4dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="For School & Private Use Only"
        android:textSize="12sp"
        android:textColor="#666666"
        android:layout_marginBottom="24dp" />

    <TextView
        android:id="@+id/statusTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status: Ready"
        android:textSize="14sp"
        android:padding="12dp"
        android:background="#E0E0E0"
        android:layout_marginBottom="16dp"
        android:gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Popular Locations:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <Spinner
        android:id="@+id/presetSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:layout_marginBottom="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Or Enter Custom Coordinates:"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Latitude (-90 to 90):"
        android:textSize="14sp"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/latitudeEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter latitude"
        android:inputType="numberDecimal|numberSigned"
        android:padding="12dp"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Longitude (-180 to 180):"
        android:textSize="14sp"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/longitudeEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter longitude"
        android:inputType="numberDecimal|numberSigned"
        android:padding="12dp"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/setLocationButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Set Location"
        android:textSize="16sp"
        android:padding="16dp"
        android:backgroundTint="#4CAF50"
        android:layout_marginBottom="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Walking Simulation:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/speedTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Speed: 5 m/s (Walking)"
        android:textSize="14sp"
        android:layout_marginBottom="8dp" />

    <SeekBar
        android:id="@+id/speedSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/startWalkingButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Walking"
        android:textSize="16sp"
        android:padding="16dp"
        android:backgroundTint="#2196F3"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/stopWalkingButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stop Walking"
        android:textSize="16sp"
        android:padding="16dp"
        android:backgroundTint="#FF9800"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/stopMockButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stop All"
        android:textSize="16sp"
        android:padding="16dp"
        android:backgroundTint="#F44336"
        android:layout_marginBottom="24dp" />

    <!-- Trading Hub Section -->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#CCCCCC"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸŽ® TRADING HUB ðŸŽ®"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#9C27B0"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unlimited Trades & Legendaries"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#9C27B0"
        android:layout_marginBottom="4dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="For Private & School Use Only"
        android:textSize="12sp"
        android:textColor="#666666"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/tradeStatusTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Unlimited Trades: DISABLED\n\nEnable to trade unlimited times with friends and legendaries.\n\nâš ï¸ For Private & School Use Only"
        android:textSize="13sp"
        android:padding="12dp"
        android:background="#F3E5F5"
        android:layout_marginBottom="16dp"
        android:gravity="center" />

    <Button
        android:id="@+id/enableUnlimitedTradesButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enable Unlimited Trades"
        android:textSize="16sp"
        android:padding="16dp"
        android:backgroundTint="#9C27B0"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Friend Locations for Trading:"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <Spinner
        android:id="@+id/friendLocationSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/teleportToFriendButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Teleport to Friend Location"
        android:textSize="16sp"
        android:padding="16dp"
        android:backgroundTint="#9C27B0"
        android:layout_marginBottom="24dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="âš ï¸ Enable 'Allow mock locations' in Developer Options\nâš ï¸ For Private & School Use Only\nâš ï¸ Unlimited trades feature helps coordinate trades with friends"
        android:textSize="11sp"
        android:textColor="#666666"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:padding="8dp" />

</LinearLayout>
</ScrollView>

